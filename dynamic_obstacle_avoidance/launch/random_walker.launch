<?xml version="1.0"?>
<launch>
 	<arg name = "runRosbag" default= "false" />
    
    <include file="$(find example_controller)/launch/turtlebot_world.launch"></include>
    
    <node pkg="example_controller" name="random_walker" type="random_walker" output="screen" />
    <node pkg="rosbag" name="record" type="record" args="-a -x /camera/(.*) -O $(find example_controller)/bags/walker.bag" if="$(arg runRosbag)" />
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find example_controller)/launch/rviz_config.rviz" />
</launch>
